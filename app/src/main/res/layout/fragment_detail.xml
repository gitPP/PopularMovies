<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    tools:context="com.mycompany.popluarmovies_i.DetailActivityFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/originalTitleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#81DAF5"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/posterImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/originalTitleTextView" />

        <TextView
            android:id="@+id/releaseDateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/originalTitleTextView"
            android:layout_toRightOf="@id/posterImageView" />

        <TextView
            android:id="@+id/voteAveTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/releaseDateTextView"
            android:layout_toRightOf="@id/posterImageView" />

        <Button
            android:id="@+id/favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/voteAveTextView"
            android:layout_toRightOf="@id/posterImageView" />


        <TextView
            android:id="@+id/overviewTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/posterImageView" />

        <TextView
            android:id="@+id/trailers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/overviewTextView"
            android:text="Trailers:" />

        <ListView
            android:id="@+id/trailerListView"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_below="@id/trailers" />

        <TextView
            android:id="@+id/reviews"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/trailerListView"
            android:text="Reviews:" />

        <ListView
            android:id="@+id/reviewListView"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_below="@id/reviews" />
    </RelativeLayout>

</ScrollView>
